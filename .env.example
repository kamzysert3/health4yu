STRIPE_SECRET_KEY=sk_test_your_key_here
PORT=4000

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_user
SMTP_PASS=your_pass
SMTP_SECURE=false

MAIL_DELETE_UPLOADS=true

CONTACT_FEE_CENTS=1000
CONTACT_FEE_CURRENCY=eur

CONTACT_REQUIRE_PAYMENT=true

MAIL_FROM="Website Contact <no-reply@yourdomain.com>"
MAIL_TO="contact@yourdomain.com"
MAIL_REPLY_TO="support@yourdomain.com"

# Production notes
# - For live operation use your Stripe *live* secret key (starts with sk_live_...) and production SMTP credentials.
# - Make sure MAIL_FROM is a verified sender for your SMTP provider (some providers require domain verification/DKIM/SPF).
